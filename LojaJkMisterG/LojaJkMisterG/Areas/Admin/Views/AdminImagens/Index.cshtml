
<style>
    .col-md-10{
        margin-top: 30px;
    }
</style>

<table border="0" width="100%">
  <tr>
    <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="UploadFiles">
               
                <div class="form-group">
                    <div class="col-md-10">
                        <img src="~/images/file.png" />
                        <br />
                        <p><b>Selecione um ou mais arquivos para enviar :</b></p>
                        <p>(Arquivos com o mesmo nome serão sobrescritos)</p>
                        <input type="file" name="files" multiple class="button btn-outline-primary" />
                    </div>
                </div>

                <hr /> 
                <div class="form-group"> 
                    <div class="col-md-10">
                          
                        <input style="color:black" type="submit" value="Enviar Arquivo (s)" class="button btn-outline-primary" />

                    </div>
                </div>
            </form>


    </td>
    
    <td>
       <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="GetImagens">

                <div class="form-group">
                    <div class="col-md-10">
                        <img src="~/images/search.png" />
                        <p><strong>Visualizar Imagens na pasta do servidor :</strong></p>
                    </div>
                </div>
                <hr />
                <div class="form-group"> 
                    <div class="col-md-10">
                        <input style="color: black" type="submit" value="Visualizar Arquivos no servidor" class="button btn-outline-secondary" />
                    </div>
                </div>

                
       </form>
    </td>
  </tr>
</table>

<div class="container">
  @if (ViewData["Deletado"] != null)
  {
    <ul>
        <li>@ViewData["Deletado"]</li>
    </ul>
  }
</div>