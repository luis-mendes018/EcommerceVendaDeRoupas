@model LojaJkMisterG.ViewModels.PedidoRoupaViewModel
@{
    ViewData["Title"] = "PedidoRoupas"; 
    decimal totalPedido = 0;
}

<style>
    h1{
        margin-top: 30px;
    }
    table tr{
        color: white;
    }
</style>
<h1>Roupas do Pedido</h1>
<hr />
<h4>Pedido : @Html.DisplayFor(model => @Model.Pedido.PedidoId)</h4>
<h4>Cliente: @Html.DisplayFor(model => @Model.Pedido.Nome)</h4>
<h4>Data: @Html.DisplayFor(model => @Model.Pedido.PedidoEnviado)</h4>
<h4>Entrega: @Html.DisplayFor(model => @Model.Pedido.PedidoEntregueEm)</h4>

<br />
<table class="table">
    @foreach (var item in @Model.Pedido.Pedidoltens)
    {
        totalPedido += (@item.Roupa.Preco * @item.Quantidade);
        <tr>
            <td align="right">
                <h5>@Html.DisplayFor(modelltem => item.Roupa.Nome)</h5>
            </td>
            <td align="right">
                <img src="@item.Roupa.ImagemUrl" class="img-fluid" height="100" width="100">
            </td>
            <td align="right">
                <h5>@string.Format("{0:C}", item.Roupa.Preco)</h5>
            </td>
            <td align="right">
                <h4>(@Html.DisplayFor(modelItem => item.Quantidade))</h4>
            </td>
        </tr>
       
    }
    <tr>
        <td colspan="2">&nbsp;</td>
        <td align="right">
            <h5>Total do Pedido : @string.Format("{0:C}", @totalPedido)</h5>
        </td>
    </tr>
</table>
<a asp-action="Index" class="btn btn-outline-info">Retornar</a>