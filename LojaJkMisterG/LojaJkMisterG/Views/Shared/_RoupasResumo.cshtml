@model Roupa

<style>
    .img-fluid {
        height: 170px;
    }

</style>

<div class="col-sm-4 col-md-4 col-lg-4">

    <p><img src="@Model.ImagemUrl" class="img-fluid" /></p>
    <h5>Preço: @Model.Preco.ToString("c")</h5>

    <h5>
        <a asp-controller="Roupa" asp-action="Details" asp-route-roupaId="@Model.RoupaId" style="color:white">@Model.Nome</a>
    </h5>
    
    <p>@Model.DescricaoCurta</p>

    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-RoupaId="@Model.RoupaId">
                Incluir no Carrinho
            </a>
        </p>
    </div>

</div>


