@model AlterarSenhaViewModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        h4 {
            color: white;
        }

        form {
            color: white;
        }

        img {
            margin-top: 20px;
        }

        table.table {
            border-collapse: collapse;
        }

            table.table, table.table td {
                border: 0;
            }
        
            .mensagem{

                margin-top: 25px;
            }
    </style>
</head>
<body>
    <div class="mensagem">
        @if (TempData["Mensagem"] != null)
        {
            <div class="alert alert-success">
                @TempData["Mensagem"]
            </div>
        }
    </div>
    <table class="table">
        <tr>
            <td>
                <div class="row">
                    <div class="col-10 col-md-10 col-lg-10">
                        <h4>Alterar senha</h4>
                        <form asp-controller="AlterarSenha" asp-action="AlterarSenhaView" method="post">

                            @*<div asp-validation-summary="All" class="text-danger"></div>*@

                            <div class="form-group" style="margin-top: 15px; width: 55%;">
                                <label asp-for="PasswordNow"></label>
                                <input asp-for="PasswordNow" class="form-control" id="PasswordNow" />
                                <input type="checkbox" style="margin-top:8px" onclick="MostrarSenhaAtual()" /> Mostrar senha
                                <span asp-validation-for="PasswordNow" class="text-danger"></span>
                            </div>

                            <div class="form-group" style="margin-top: 15px; width: 55%;">
                                <label asp-for="PasswordNew"></label>
                                <input asp-for="PasswordNew" class="form-control" id="PasswordNew" />
                                <input type="checkbox" style="margin-top:8px" onclick="MostrarNovaSenha()" /> Mostrar senha
                                <span asp-validation-for="PasswordNew" class="text-danger"></span>
                            </div>

                            <div class="form-group" style="margin-top: 15px; width: 55%;">
                                <label asp-for="PasswordNewConfirm"></label>
                                <input asp-for="PasswordNewConfirm" class="form-control" id="PasswordNewConfirm" />
                                <input type="checkbox" style="margin-top:8px" onclick="MostrarNovaSenhaConfirm()" /> Mostrar senha
                                <span asp-validation-for="PasswordNewConfirm" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <input type="submit" class="btn btn-success " value="Salvar" />
                                <br />
                                <br />
                                <a class="btn btn-primary" asp-area="" asp-controller="Roupa" asp-action="List">
                                    Voltar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </td>
        <tr>
    </table>

    <script src="~/js/site.js"></script>
</body>
</html>