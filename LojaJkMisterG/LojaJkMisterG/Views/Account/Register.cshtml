@model CadastroViewModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        h4 {
            color: white;
        }

        form {
            color: white;
        }

        img {
            margin-top: 20px;
        }

        table.table {
            border-collapse: collapse;
        }

            table.table, table.table td {
                border: 0;
            }
    </style>
</head>
<body>
    <table class="table">
        <tr>
            <td><img src="~/images/cadastro.png" alt="Registrar Usuário" /></td>
            <td>
                <div class="row">
                    <div class="col-10 col-md-10 col-lg-10">
                        <h4>Cadastre-se</h4>
                        <form asp-controller="Account" asp-action="Register" method="post">

                            @*<div asp-validation-summary="All" class="text-danger"></div>*@
                            <div class="form-group" style="width: 55%;">
                                <label asp-for="UserName"> </label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="form-group" style="margin-top: 15px; width: 55%;">
                                <label asp-for="EmailRegister"></label>
                                <input asp-for="EmailRegister" class="form-control" />
                                <span asp-validation-for="EmailRegister" class="text-danger"></span>
                            </div>

                            <div class="form-group" style="margin-top: 15px; width: 55%;">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" id="Password" />
                                <input type="checkbox" style="margin-top:8px" onclick="MostrarSenha()" /> Mostrar senha
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group" style="margin-top: 15px; width: 55%;">
                                <label asp-for="PasswordConfirm"></label>
                                <input asp-for="PasswordConfirm" class="form-control" id="PasswordConfirm" />
                                <input type="checkbox" style="margin-top:8px" onclick="MostrarSenhaConfirm()" /> Mostrar senha
                                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <input type="submit" class="btn btn-success " value="Cadastrar" />
                            </div>
                        </form>
                    </div>
                </div>
            </td>
        <tr>
    </table>

    <script src="~/js/site.js"></script>
</body>
</html>