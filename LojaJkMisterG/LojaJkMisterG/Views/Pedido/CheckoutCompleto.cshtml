@model Pedido

<style>
    .container .card .card-body{

        margin-top: 40px;
    }
</style>
<br />
<br />
<div class="container">
    <br />
    <br />
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente: <strong>@Model.Nome</strong></p>
            <p>Data do Pedido: <strong>@Model.PedidoEnviado</strong></p>
            <p>Número do Pedido: <strong>@Model.PedidoId</strong></p>

            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Roupa</th>
                    <th>Preço</th>
                </tr>

                @foreach (var item in Model.Pedidoltens)
                {
                    <tr>
                        <td>@item.Quantidade</td>
                        <td>@item.Roupa.Nome</td>
                        <td><img src="@item.Roupa.ImagemUrl" width="40" height="40" /></td>
                        <td>@item.Roupa.Preco</td>
                    </tr>
                }
            </table>

            <h4>Valor Total do Pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong><</h4>>
        </div>
    </div>

    <div class="form-group" style="text-align:center">
        <h3>
            <a class="nav-link text-info" asp-controller="Roupa" asp-action="List">Retornar</a>
        </h3>
    </div>

</div>